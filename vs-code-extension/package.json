{
	"name": "ToscaYaml",
	"description": "VSCode plugin for TOSCA Yaml",
	"license": "Apache-2.0",
	"version": "1.0.0",
	"publisher": "iaas",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.33.0"
	},
	"activationEvents": [
		"onLanguage:ToscaYaml"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "ToscaYaml",
				"aliases": [
					"ToscaYaml"
				],
				"extensions": [
					".yml"
				],
				"configuration": "./ToscaYaml.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ToscaYaml",
				"scopeName": "text.yml",
				"path": "./syntaxes/ToscaYaml.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^8.10.54",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4"
	}
}
